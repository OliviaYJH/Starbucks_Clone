<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoLoginSettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="설정"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:id="@+id/tv_other"/>

        <View
            android:id="@+id/v_divider"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#F3F2F2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_other"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_setting_register"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="회원가입"
                android:background="@drawable/round_none_border"
                android:textColor="#067843"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_setting_login"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="로그인"
                android:background="@drawable/round_none_border"
                android:textColor="#067843"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>